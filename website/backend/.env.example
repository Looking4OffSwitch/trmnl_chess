# Backend environment variables (copy to website/backend/.env for local dev)
# At least one Redis connection method is required:
# 1) Upstash REST (preferred for Vercel serverless)
UPSTASH_REDIS_REST_URL="https://<upstash-id>.upstash.io"
UPSTASH_REDIS_REST_TOKEN="<rest-token>"
# 2) Direct Redis URL (for local dev or non-REST deployments)
UPSTASH_REDIS_URL="rediss://:<password>@<host>:<port>"

# Base URL the QR codes should point to (public hostname of your VPS)
FRONTEND_URL="https://chess.example.com"

# Optional: TRMNL webhook for forcing device refresh
TRMNL_WEBHOOK_URL="https://usetrmnl.com/api/custom_plugins/<uuid>"

# Optional: observability/logging
SENTRY_DSN=""
LOG_LEVEL="debug"
